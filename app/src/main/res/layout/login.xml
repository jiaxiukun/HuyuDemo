<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/login_re"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="立即登录"
            android:textSize="18sp" />

    </RelativeLayout>

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@mipmap/user"
    android:layout_marginTop="60dp"
    android:layout_marginLeft="50dp"
    />

    <EditText
        android:id="@+id/login_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_re"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:maxLength="11"
        android:hint=" 请输入手机号"
        android:padding="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/pwd"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        />

    <EditText
        android:id="@+id/login_pwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint=" 请输入密码"
        android:maxLength="18"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp" />

    <TextView
        android:id="@+id/login_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_pwd"
        android:layout_alignStart="@+id/login_pwd"
        android:layout_below="@+id/login_pwd"
        android:layout_marginTop="11dp"
        android:text="注册账号" />

    <TextView
        android:id="@+id/login_tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_tv_register"
        android:layout_alignBottom="@+id/login_tv_register"
        android:layout_alignEnd="@+id/login_pwd"
        android:layout_alignRight="@+id/login_pwd"
        android:text="忘记密码" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/login_tv_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:background="#770000ff"
        android:textSize="15sp" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_bar"
        android:layout_marginTop="119dp"
        android:layout_below="@+id/login_bt"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="--快捷登录立即体验--"
        android:textSize="20sp"
        android:gravity="center"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:background="@drawable/text_contour"
        android:layout_below="@+id/login_bt"
        />

    <LinearLayout
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_mobile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@mipmap/cellphone_leftdrawer_normal" />

        <ImageView
            android:id="@+id/left_qzone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/qq_leftdrawer_normal" />

        <ImageView
            android:id="@+id/left_weibo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@mipmap/sina_leftdrawer_normal" />

    </LinearLayout>





    </RelativeLayout>