<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/reg_re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手机号注册"
            android:textColor="#00ff00"
            android:textSize="18sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/reg_re"
        android:background="#55000000" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请输入下方验证码"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:textColor="#6C5102"
    android:padding="10dp"
    android:textSize="16sp"
    android:id="@+id/two_code"
    android:layout_below="@+id/reg_re"/>
    <EditText
        android:id="@+id/reg_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_tip_code"
        android:hint=" 请输入验证码"
        android:maxLength="4"
        android:maxLines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/reg_pwd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@mipmap/ic_tip_pwd"
        android:hint=" 请输入密码"
        android:maxLength="18"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp" />


    <Button
        android:id="@+id/reg_login"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/reg_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_contour"
        android:text="注册"
        android:textColor="@color/title_color"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reg_num"
        android:layout_alignBottom="@+id/reg_num"
        android:layout_alignEnd="@+id/reg_num"
        android:layout_alignRight="@+id/reg_num"
        android:background="#44000000"
        android:gravity="center"
        android:id="@+id/reg_code"
        android:text="8867" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_two_bar"
        android:layout_marginTop="111dp"
        android:visibility="gone"
        android:layout_below="@+id/reg_login"
        android:layout_centerHorizontal="true" />
</RelativeLayout>