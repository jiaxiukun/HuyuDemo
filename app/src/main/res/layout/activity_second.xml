<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3300ff00"
    tools:context="baway.com.huyudemo.SecondActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_weight="1"
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="天气"/>
    <ImageView
        android:id="@+id/image_login"
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_user"
        />
</LinearLayout>

    <ImageView
        android:id="@+id/image_logo"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@mipmap/logo"/>
    <EditText
        android:id="@+id/edittext_search"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/image_logo"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        />
    <ImageView
        android:id="@+id/image_sou"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:background="@mipmap/sou"
        android:layout_alignRight="@id/edittext_search"
        android:layout_alignBottom="@id/edittext_search"
        />
    <ImageView
        android:id="@+id/image_yuyin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/yuyin"
        android:layout_below="@id/edittext_search"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
